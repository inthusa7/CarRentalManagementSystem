@{
}

@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Booking List";
}

<h2>Booking List</h2>

<p>
    <a asp-action="Create" asp-area="Admin" class="btn btn-primary">Add New Booking</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer</th>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.User.Username</td>
                <td>@booking.Car.CarName</td>
                <td>@booking.PickupDate.ToShortDateString()</td>
                <td>@booking.ReturnDate.ToShortDateString()</td>
                <td>@booking.TotalCost.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@booking.BookingID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-area="Admin" asp-route-id="@booking.BookingID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

