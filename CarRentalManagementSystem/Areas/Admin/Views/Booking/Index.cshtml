@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Bookings";
}

<h2>Manage Bookings</h2>

<p>
    <a asp-area="Admin" asp-controller="Booking" asp-action="Create" class="btn btn-primary">+ Create New Booking</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Customer</th>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.User?.Username</td>
                <td>@booking.Car?.CarName (@booking.Car?.CarModel)</td>
                <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                <td>@booking.TotalCost.ToString("C")</td>
                <td>
                    <a asp-area="Admin" asp-controller="Booking" asp-action="Edit" asp-route-id="@booking.BookingID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-area="Admin" asp-controller="Booking" asp-action="Delete" asp-route-id="@booking.BookingID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
