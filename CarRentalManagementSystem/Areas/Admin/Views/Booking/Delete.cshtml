@model CarRentalManagementSystem.Models.Car

<h2>Delete Car</h2>
<p>Are you sure you want to delete <b>@Model.CarName (@Model.CarModel)</b>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CarID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/Admin/Car" class="btn btn-secondary">Cancel</a>
</form>
