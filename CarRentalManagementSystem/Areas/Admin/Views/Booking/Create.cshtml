@model CarRentalManagementSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="CustomerID" class="form-label">Customer</label>
        <select asp-for="CustomerID" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "UserID", "Username"))">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarID" class="form-label">Car</label>
        <select asp-for="CarID" class="form-select" asp-items="@(new SelectList(ViewBag.Cars, "CarID", "CarName"))">
            <option value="">-- Select Car --</option>
        </select>
        <span asp-validation-for="CarID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PickupDate" class="form-label">Pickup Date</label>
        <input asp-for="PickupDate" class="form-control" type="date" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReturnDate" class="form-label">Return Date</label>
        <input asp-for="ReturnDate" class="form-control" type="date" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Total Cost</label>
        <input class="form-control" value="@Model.TotalCost.ToString("C")" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Optional: dynamically calculate total cost on date change
        const pickupInput = document.getElementById("PickupDate");
        const returnInput = document.getElementById("ReturnDate");
        const carSelect = document.getElementById("CarID");
        const totalCostInput = document.querySelector("input[readonly]");

        function calculateCost() {
            const carRate = carSelect.selectedOptions[0]?.dataset.rate || 0;
            const pickup = new Date(pickupInput.value);
            const dropoff = new Date(returnInput.value);
            let days = Math.ceil((dropoff - pickup) / (1000*60*60*24));
            if (days < 1) days = 1;
            totalCostInput.value = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(days * carRate);
        }

        pickupInput?.addEventListener("change", calculateCost);
        returnInput?.addEventListener("change", calculateCost);
        carSelect?.addEventListener("change", calculateCost);
    </script>
}
