@model CarRentalManagementSystem.Models.Car

<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarID" />
    <div>
        <label asp-for="CarName"></label>
        <input asp-for="CarName" class="form-control"/>
    </div>
    <div>
        <label asp-for="CarModel"></label>
        <input asp-for="CarModel" class="form-control"/>
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control"/>
    </div>
    <div>
        <label asp-for="DailyRate"></label>
        <input asp-for="DailyRate" class="form-control"/>
    </div>
    <div>
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" type="checkbox"/>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
