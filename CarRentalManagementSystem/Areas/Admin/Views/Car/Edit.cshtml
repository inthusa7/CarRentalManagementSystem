@model CarRentalManagementSystem.Models.Car
@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CarID" />

    <div class="form-group">
        <label asp-for="CarName"></label>
        <input asp-for="CarName" class="form-control" />
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CarModel"></label>
        <input asp-for="CarModel" class="form-control" />
        <span asp-validation-for="CarModel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DailyRate"></label>
        <input asp-for="DailyRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SeatCount"></label>
        <input asp-for="SeatCount" class="form-control" type="number" />
        <span asp-validation-for="SeatCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CarColor"></label>
        <input asp-for="CarColor" class="form-control" />
        <span asp-validation-for="CarColor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/@Model.ImageUrl" width="150" />
        }
    </div>

    <div class="form-group">
        <label>Upload New Image (optional)</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
