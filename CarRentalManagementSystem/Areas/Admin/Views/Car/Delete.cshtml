@{
}

@model CarRentalManagementSystem.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<div>
    <h4>Are you sure you want to delete this car?</h4>
    <dl class="row">
        <dt class="col-sm-2">Car Name</dt>
        <dd class="col-sm-10">@Model.CarName</dd>

        <dt class="col-sm-2">Car Model</dt>
        <dd class="col-sm-10">@Model.CarModel</dd>

        <dt class="col-sm-2">Daily Rate</dt>
        <dd class="col-sm-10">@Model.DailyRate.ToString("C")</dd>

        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@(Model.IsAvailable ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-area="Admin" method="post">
        <input type="hidden" asp-for="CarID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>

