@{
}

@model IEnumerable<CarRentalManagementSystem.Models.Car>

@{
    ViewData["Title"] = "Car List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-car-front"></i> Car List</h2>
    <a asp-action="Create" asp-area="Admin" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Car
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Car ID</th>
            <th>Car Name</th>
            <th>Car Model</th>
            <th>Daily Rate</th>
            <th>Available</th>
            <th>Image</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.CarName</td>
                    <td>@car.CarModel</td>
                    <td>@car.DailyRate.ToString("C")</td>
                    <td>
                        @if (car.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(car.ImageUrl))
                        {
                            <img src="@car.ImageUrl" alt="@car.CarName" class="img-thumbnail" style="width:100px; height:70px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-area="Admin" asp-route-id="@car.CarID" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-area="Admin" asp-route-id="@car.CarID" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No cars available.</td>
            </tr>
        }
    </tbody>
</table>
