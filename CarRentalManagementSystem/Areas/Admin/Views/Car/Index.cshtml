@model IEnumerable<CarRentalManagementSystem.Models.Car>
@{
    ViewData["Title"] = "Cars List";
}

<h2>Cars List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Car</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th style="width:120px;">Image</th>
            <th style="width:150px;">Name</th>
            <th style="width:150px;">Model</th>
            <th style="width:120px;">Rate (Daily)</th>
            <th style="width:80px;">Seats</th>
            <th style="width:120px;">Color</th>
            <th style="width:150px;">Location</th>
            <th style="width:200px;">Description</th>
            <th style="width:100px;">Available</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                    {
                        <img src="~/@car.ImageUrl" width="100" />
                    }
                </td>
                <td>@car.CarName</td>
                <td>@car.CarModel</td>
                <td>@car.DailyRate.ToString("C")</td>
                <td>@car.SeatCount</td>
                <td>@car.CarColor</td>
                <td>@car.Location</td>
                <td>@car.Description</td> <!-- NEW -->
                <td>@(car.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-sm btn-success">Edit</a>
                    <form asp-action="Delete" asp-route-id="@car.CarID" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this car?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
