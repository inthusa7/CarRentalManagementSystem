@model IEnumerable<CarRentalManagementSystem.Models.Car>

<h2>Manage Cars</h2>
<a class="btn btn-primary" href="/Admin/Car/Create">+ Add New Car</a>
<br /><br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Car Name</th>
            <th>Car Model</th>
            <th>Daily Rate</th>
            <th>Available</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var car in Model)
{
        <tr>
            <td>@car.CarName</td>
            <td>@car.CarModel</td>
            <td>@car.DailyRate</td>
            <td>@(car.IsAvailable ? "Yes" : "No")</td>
            <td>
                <img src="@car.ImageUrl" alt="Car Image" width="100" />
            </td>
            <td>
                <a class="btn btn-warning btn-sm" href="/Admin/Car/Edit/@car.CarID">Edit</a> |
                <a class="btn btn-danger btn-sm" href="/Admin/Car/Delete/@car.CarID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
