@{
}
@model CarRentalManagementSystem.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<h2>Payment Details</h2>

<div class="card p-4 shadow-sm" style="max-width:600px;">
    <p><strong>Payment ID:</strong> @Model.PaymentID</p>
    <p><strong>Booking ID:</strong> @Model.BookingID</p>
    <p><strong>Customer:</strong> @Model.Booking.User.Username</p>
    <p><strong>Car:</strong> @Model.Booking.Car.CarName</p>
    <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
    <p><strong>Method:</strong> @Model.PaymentMethod</p>
    <p><strong>Date:</strong> @Model.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Payments</a>
