@model IEnumerable<CarRentalManagementSystem.Models.User>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<h2>All Users</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Alt Contact No</th>
            <th>Address</th>
            <th>Driver License No</th>
            <th>Role</th>
            <th>Actions</th>  <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.ContactNo</td>
                <td>@user.AltContactNo</td>
                <td>@user.Address</td>
                <td>@user.DriverLicenseNo</td>
                <td>@user.Role</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@user.UserID" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
