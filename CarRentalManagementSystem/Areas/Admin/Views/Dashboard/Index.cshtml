@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Welcome, @Context.Session.GetString("AdminUsername")</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary p-3">
            <h5>Total Customers</h5>
            <h3>@ViewBag.TotalCustomers</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success p-3">
            <h5>Total Cars</h5>
            <h3>@ViewBag.TotalCars</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning p-3">
            <h5>Total Bookings</h5>
            <h3>@ViewBag.TotalBookings</h3>
        </div>
    </div>
</div>

<h4>Recent Bookings</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>BookingID</th>
            <th>CustomerID</th>   @* Show only ID since User removed *@
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.CustomerID</td>
                <td>@booking.Car?.CarName</td>
                <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                <td>@booking.TotalCost.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
