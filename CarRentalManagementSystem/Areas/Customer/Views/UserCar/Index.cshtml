@model IEnumerable<CarRentalManagementSystem.Models.Car>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Cars";
}

<h2>Manage Cars</h2>

<p>
    <a asp-area="Admin" asp-controller="Car" asp-action="Create" class="btn btn-primary">+ Add New Car</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Car Name</th>
            <th>Car Model</th>
            <th>Daily Rate</th>
            <th>Available</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarName</td>
                <td>@car.CarModel</td>
                <td>@car.DailyRate.ToString("C")</td>
                <td>@(car.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <img src="@car.ImageUrl" alt="Car Image" width="100" />
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Car" asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-area="Admin" asp-controller="Car" asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
