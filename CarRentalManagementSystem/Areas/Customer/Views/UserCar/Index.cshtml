@{
}
@model IEnumerable<CarRentalManagementSystem.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<p>
    <a asp-action="Create" asp-area="Admin" class="btn btn-primary">Add New User</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@user.UserID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-area="Admin" asp-route-id="@user.UserID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

