@model IEnumerable<CarRentalManagementSystem.Models.Car>

@{
    ViewData["Title"] = "Available Cars";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Available Cars</h2>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                    {
                        <img src="@car.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="/images/cars/default.jpg" class="card-img-top" style="height:200px; object-fit:cover;" />
                    }
                    <div class="card-body text-center">
                        <h5 class="card-title">@car.CarName</h5>
                        <p class="card-text">Model: @car.CarModel</p>
                        <p class="card-text">Rate: @car.DailyRate.ToString("C") / day</p>

                        <a asp-area="Customer" asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary">
                            View Details
                        </a>
                        <a asp-area="Customer" asp-controller="Account" asp-action="Login" class="btn btn-success">
                            Book Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
