@{
}
@model CarRentalManagementSystem.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>@Model.CarName</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Model:</strong> @Model.CarModel</p>
        <p><strong>Daily Rate:</strong> @Model.DailyRate.ToString("C")</p>
        <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" style="width:300px;" />
        }

        <div class="mt-3">
            <a asp-area="Customer" asp-controller="Booking" asp-action="Create" asp-route-carId="@Model.CarID" class="btn btn-success">
                Book This Car
            </a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
