@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Booking History";
}

<h2>Booking History</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Car</th>
            <th>Pickup</th>
            <th>Return</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@(booking.Car != null ? $"{booking.Car.CarName} ({booking.Car.CarModel})" : "N/A")</td>
                    <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.TotalCost.ToString("C")</td>
                    <td>
                        @if (booking.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Unpaid</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No booking history found.</td>
            </tr>
        }
    </tbody>
</table>
