@{
}
@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>
<p>
    <a asp-area="Admin" asp-controller="Booking" asp-action="Create" class="btn btn-primary">+ Create New Booking</a>
</p>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@booking.Car != null ? $"{booking.Car.CarName} ({booking.Car.CarModel})" : "N/A"</td>
                    <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.TotalCost.ToString("C")</td>
                    
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>

