@{
    ViewData["Title"] = "Customer Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width:450px;">
    <h2 class="text-center mb-4">Customer Login</h2>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" name="username" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" required />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

        <div class="text-center mt-3">
            <p>
                If you don’t have an account
                <a asp-area="Customer" asp-controller="Account" asp-action="Register">Register quikly to book the car</a>
            </p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="text-danger text-center mt-2">@ViewBag.Error</div>
        }
    </form>
</div>
