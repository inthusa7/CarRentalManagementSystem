@model IEnumerable<CarRentalManagementSystem.Models.Booking>

<h2>My Booking History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no bookings yet. <a asp-area="Customer" asp-controller="Car" asp-action="Index">Browse cars</a> to book.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Car</th>
                <th>Pickup</th>
                <th>Return</th>
                <th>Total Cost</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var booking in Model)
            {
                var canCancel = booking.PickupDate > DateTime.Now;
                <tr>
                    <td>@booking.Car?.CarName (@booking.Car?.CarModel)</td>
                    <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.TotalCost.ToString("C")</td>
                    <td>
                        @(booking.ReturnDate < DateTime.Now ? "Completed" : "Upcoming")
                    </td>
                    <td>
                        @if(canCancel)
                        {
                            <form asp-action="Cancel" method="post" asp-route-id="@booking.BookingID" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
