@{
}
@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Customer Dashboard";
}

<h2>Welcome, @Context.Session.GetString("Username")</h2>

<p>
    <a asp-area="Customer" asp-controller="Car" asp-action="Index" class="btn btn-primary">Browse Cars</a>
</p>

<h4>My Bookings</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no bookings yet.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Car</th>
                <th>Pickup Date</th>
                <th>Return Date</th>
                <th>Total Cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                var status = booking.ReturnDate < DateTime.Now ? "Completed" :
                booking.PickupDate > DateTime.Now ? "Upcoming" : "Active";

                <tr>
                    <td>@booking.Car.CarName (@booking.Car.CarModel)</td>
                    <td>@booking.PickupDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.ReturnDate.ToString("dd MMM yyyy")</td>
                    <td>@booking.TotalCost.ToString("C")</td>
                    <td>@status</td>
                </tr>
            }
        </tbody>
    </table>
}


