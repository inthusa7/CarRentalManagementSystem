@model IEnumerable<CarRentalManagementSystem.Models.Booking>
@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<h2>Customer Dashboard</h2>

<div class="row mb-4 text-center">
    <div class="col-md-4">
        <div class="card p-3 bg-primary text-white shadow-sm">
            <h5>Total Bookings</h5>
            <h3>@ViewBag.TotalBookings</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 bg-success text-white shadow-sm">
            <h5>Upcoming Bookings</h5>
            <h3>@ViewBag.UpcomingBookings</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 bg-warning text-dark shadow-sm">
            <h5>Completed Bookings</h5>
            <h3>@ViewBag.CompletedBookings</h3>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Amount</th>
            <th>Payment Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Car.CarName (@booking.Car.CarModel)</td>
                <td>@booking.PickupDate.ToString("dd/MM/yyyy")</td>
                <td>@booking.ReturnDate.ToString("dd/MM/yyyy")</td>
                <td>@booking.TotalCost.ToString("C")</td>
                <td>@(booking.IsPaid ? "Paid" : "Pending")</td>
                <td>
                    @if(!booking.IsPaid)
                    {
                        <a asp-area="Customer" asp-controller="Payment" asp-action="Create" asp-route-bookingId="@booking.BookingID" class="btn btn-primary btn-sm">Pay Now</a>
                        <form asp-area="Customer" asp-controller="Booking" asp-action="Cancel" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@booking.BookingID" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
