@{
}

@model CarRentalManagementSystem.Models.Car
@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model?.CarName ?? "Car Details";
}

<h2>@Model.CarName (@Model.CarModel)</h2>


<div class="row">
    <div class="col-md-6">
        <img src="~/Images/Cars/car2.jpg" class="img-fluid" alt="@Model.CarName" />
    </div>
    <div class="col-md-6">
        <p><strong>Daily Rate:</strong> @Model.DailyRate.ToString("C")</p>
        <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

        @if (Model.IsAvailable)
        {
            <a asp-area="Customer" asp-controller="Booking" asp-action="Create" asp-route-carId="@Model.CarID" class="btn btn-success">Book Now</a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Not available</button>
        }

        <a asp-area="Customer" asp-controller="Car" asp-action="Index" class="btn btn-link">Back to list</a>
    </div>
</div>
