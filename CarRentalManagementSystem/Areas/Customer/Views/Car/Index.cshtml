@model IEnumerable<CarRentalManagementSystem.Models.Car>

@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Available Cars";
}

<h2>Available Cars</h2>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/Images/Cars/car2.jpg" class="card-img-top" alt="@car.CarName" style="height:200px;object-fit:cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@car.CarName</h5>
                    <p class="mb-1">@car.CarModel</p>
                    <p class="mb-2">Daily: @car.DailyRate.ToString("C")</p>
                    <div class="mt-auto">
                        <a asp-area="Customer" asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary btn-sm">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
