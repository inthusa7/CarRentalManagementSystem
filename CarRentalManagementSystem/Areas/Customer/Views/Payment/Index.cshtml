@model IEnumerable<CarRentalManagementSystem.Models.Payment>

@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Payments";
}

<h2>My Payments</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Payment ID</th>
            <th>Booking ID</th>
            <th>Car</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.PaymentID</td>
                    <td>@p.BookingID</td>
                    <td>@(p.Booking.Car != null ? $"{p.Booking.Car.CarName} ({p.Booking.Car.CarModel})" : "N/A")</td>
                    <td>@(p.Booking != null ? p.Booking.TotalCost.ToString("C") : "$0.00")</td>
                    <td>@p.PaymentMethod</td>
                    <td>@p.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                    <td>
                        @if (p.Booking != null && p.Booking.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No payments found.</td>
            </tr>
        }
    </tbody>
</table>
