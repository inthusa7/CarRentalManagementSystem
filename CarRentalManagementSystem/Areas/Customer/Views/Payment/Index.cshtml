@model IEnumerable<CarRentalManagementSystem.Models.Payment>

@{
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Payments";
}

<h2>My Payments</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Payment ID</th>
            <th>Booking ID</th>
            <th>Car</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PaymentID</td>
                <td>@p.BookingID</td>
                <td>@(p.Booking.Car != null ? $"{p.Booking.Car.CarName} ({p.Booking.Car.CarModel})" : "N/A")</td>
                <td>@p.Amount.ToString("C")</td>
                <td>@p.PaymentMethod</td>
                <td>@p.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                <td>
                    <a asp-area="Customer" asp-controller="Booking" asp-action="BookingHistory" asp-route-bookingId="@p.BookingID" class="btn btn-info btn-sm">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
