@model CarRentalManagementSystem.Models.Car
@{
    ViewData["Title"] = "Edit Car";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<h1 class="animate__animated animate__fadeInDown">@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" class="animate__animated animate__fadeInUp animate__delay-1s">
    <input type="hidden" asp-for="CarID" />

    <div class="form-group mb-3">
        <label>Car Name</label>
        <input asp-for="CarName" class="form-control" />
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Car Model</label>
        <input asp-for="CarModel" class="form-control" />
        <span asp-validation-for="CarModel" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Daily Rate</label>
        <input asp-for="DailyRate" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label">Available</label>
    </div>

    <div class="form-group mb-3">
        <label>Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="/Car/Index" class="btn btn-secondary">Cancel</a>
</form>
