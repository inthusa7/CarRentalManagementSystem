@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Car Rental Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f3f0f9;
        }
        .navbar-custom {
            background: linear-gradient(to right, purple, green);
        }
        .navbar-custom .nav-link, 
        .navbar-custom .navbar-brand {
            color: white !important;
            font-weight: bold;
        }
        .btn-purple {
            background-color: purple;
            color: white;
        }
        .btn-green {
            background-color: green;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">CarRental</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    @* Show Customer links only if logged in and role = Customer *@
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Customer")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cars" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Booking" asp-action="Index">My Bookings</a>
                        </li>
                    }

                    @* Admin links *@
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Cars" asp-action="Index">Manage Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Booking" asp-action="Index">Manage Bookings</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link">Hello, @HttpContextAccessor.HttpContext.Session.GetString("Username")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Render Scripts section safely to avoid 'section not rendered' errors *@
    @RenderSection("Scripts", required: false)
</body>
</html>
