@{
    // This sets the page title shown in the browser tab
    ViewData["Title"] = "About Page";
}

<!-- Container for alignment -->
<div class="container mt-5">

    <!-- Heading with fade-in animation -->
    <h1 class="text-center fw-bold mb-4 animate__animated animate__fadeInDown">
        About Our Car Rental Management System
    </h1>

    <!-- First paragraph with fade-up animation -->
    <p class="lead text-center animate__animated animate__fadeInUp">
        Our Car Rental Management System is designed to make car rentals
        <span class="text-primary fw-bold">easy, fast, and efficient</span>.
        Customers can browse and book cars quickly, while admins can manage
        vehicles, customers, payments, and rental history with ease.
        The system saves time, reduces manual work, and provides a
        better experience for everyone.
    </p>

    <!-- Separator line -->
    <hr class="my-5">

    <!-- Second paragraph with slide-in effect -->
    <p class="text-center animate__animated animate__slideInUp">
        We built this project to replace traditional manual processes
        with a <span class="text-success fw-bold">modern, technology-driven solution</span>.
        Our goal is to create a reliable, user-friendly, and secure system
        for car rental companies and their customers.
    </p>
</div>

<!-- Add Animate.css for animations -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
