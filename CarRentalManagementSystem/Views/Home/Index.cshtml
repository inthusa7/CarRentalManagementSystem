@using System.Linq
@using Microsoft.AspNetCore.Http
@model IEnumerable<CarRentalManagementSystem.Models.Car>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
    var isLoggedIn = HttpContextAccessor.HttpContext.Session.GetString("Username") != null;
}

<!-- Hero Section -->
<div class="hero position-relative">
    <div class="hero-content text-start ms-5">
        <h1>Welcome to RentMyRide</h1>
        <p class="mt-3">
            Our Car Rental Management System makes it easy and convenient for customers to book cars online anytime, anywhere.
            We provide a wide range of vehicles – from economy cars to luxury models – to suit your travel needs.
            With simple registration, secure login, and transparent booking options, our platform ensures a hassle-free rental experience.
        </p>
    </div>
</div>

<!-- Available Cars Section -->
<section class="container mt-5">
    <h2 class="text-center mb-4">Available Cars</h2>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/@car.ImageUrl" alt="@car.CarName" class="card-img-top" style="height:200px; object-fit:cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.CarName (@car.CarModel)</h5>
                            <p class="card-text flex-grow-1">
                                Price per day: @car.DailyRate.ToString("C")
                            </p>

                            @if (isLoggedIn)
                            {
                                <a asp-area="Customer"
                                   asp-controller="Booking"
                                   asp-action="BookNow"
                                   asp-route-carId="@car.CarID"
                                   class="btn btn-primary mt-auto">
                                    Book Now
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account"
                                   asp-action="Login"
                                   asp-route-returnUrl="@Url.Action("BookNow", "Booking", new { area = "Customer", carId = car.CarID })"
                                   class="btn btn-warning mt-auto">
                                    Login to Book
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No cars available at the moment.</p>
            </div>
        }
    </div>
</section>
